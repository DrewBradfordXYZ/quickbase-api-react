{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node", // Changed to "node" for classic Node.js resolution
    "declaration": true,
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "jsx": "react-jsx" // Added for React compatibility
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
